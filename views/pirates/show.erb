<h1>Display your Pirate here</h1>
    <div class="pirate">
        <h3>Name: <%= @pirate.name %></h3>
        <h4> Height: <%= @pirate.height %></h4>
        <h4> Weight: <%= @pirate.weight %></h4>
    </div>
    <br>
<h2>Display your ships here</h2>
    <% @ships.each do |pirate_ship|%>
    <div class="pirate_ship">
        <p>Name: <%= pirate_ship.name%></p>
        <p>Type: <%= pirate_ship.type%></p>
        <p>Booty: <%= pirate_ship.booty%></p>
    </div>
    <% end %>
